@import "variables.styl"
.section
  //max-width 1360px
  box-sizing border-box
  &-cropped
    max-width 1400px
    margin 0 auto
  &-two-column:nth-child(odd)
    padding-right 3rem
  &-two-column:nth-child(even)
    padding-left 3rem
  &-first
    position: relative;
    background url(../assets/image/background_block1.jpg) center center no-repeat
    margin 0 auto
    min-height: 100vh
    width 100%
    height 100%
    background-size: cover;
    display flex
    flex-direction column
    justify-content center
    align-items center
    color white
    border-bottom 0.6rem solid white
    &_bg-shadow
      position absolute
      z-index 1
    &_title
      padding-top 4rem
      font-size 7rem
      font-family Times-New-Roman
      letter-spacing: 3px
      z-index 2
    &_img
      margin 3rem 0
      z-index 2
    &_text
      font-size 2rem
      text-align center
      color whitesmoke
      z-index 2
    &_btn
      color white
      background-color $transparentGreyBg
      padding 1rem 2.5rem
      margin 3rem 0 4rem 0
      border 1px dashed #959289
      z-index 2
  &-second
    background url(../assets/image/background_block2.jpg) no-repeat
    background-size cover
    width 100%
    box-sizing border-box
    color $textColorGray
    //height 80%
    //min-height 80vh
    //display flex
    //justify-content center
    //box-sizing border-box
    &_title
      font-size 3rem
    &_text1
      color $textColorBrown
      font-weight bold
      margin-bottom 2rem
    &_text3
      font-size 1.5rem
      font-weight bold
      margin 2rem 0
    &_text4
      //display flex
      box-sizing border-box
      width 100%
    &_text4-leftquote
      font-size 5rem
      float left
      color #b8b6b3
    &_text4-rightquote
      font-size 5rem
      float right
      color #b8b6b3
    &_text41
      font-size 2rem
      //padding-top 5rem
      font-family Scriptina
      color $textColorBrown
      //width 90%
    &_img1
      height 30px
      margin-bottom 1rem
    &-right
      padding-top 6rem
    &-left
      display flex
      flex-direction column
      align-items center
      text-align center
      padding-top 5rem
      //margin-right 2rem
      //padding-right 3rem
      > .avatar
        display flex
        //margin-bottom 15rem
        > .avatar_img
          height 100%
        > .avatar_text
          //padding-top 3rem
          //box-sizing border-box
          margin 1rem 2rem
          padding 1rem 1rem
          font-size 2rem
          border-top 2px solid #d8d6cb
          border-bottom 2px solid #d8d6cb

  &-third
    background url(../assets/image/bg3.jpg) no-repeat
    background-size cover
    box-sizing border-box
    //padding 6rem 0
    //min-height: 80vh
    width 100%
    height 80vh
    &-left
      background url(../assets/image/block-3_left.png) no-repeat
      background-size cover
      margin 6rem 0
      height 80%
      width 100%
    &-left_img
      height 100%
      //max-height 490px
      //max-width 400px
    &-right
      background-color white
      display flex
      flex-direction column
      justify-content center
      height 80%
      margin 6rem 0
    //align-items center
    &_title
      font-size 3.5rem
    &_text1
      margin 2rem 0
      color #b39279
      font-weight bold
    &_text2
      margin-bottom 2rem
    &_images-block
      display flex
      align-self center
      align-items center
      position relative
      justify-content space-between
      width 60%                                  /*!!!!!*/
    &_text-block
      padding 0 4rem
    &_image1
      //position absolute
      height 35px
    &_image5
      //position absolute
      height 35px



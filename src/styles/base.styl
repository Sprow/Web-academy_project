$baseFontSize=16px;
$pageContentMaxWidth=980px;

html
	font-size $baseFontSize
	font-family Alegreya-Regular, Scriptina, Arial, Helvetica, sans-serif
	min-height 100vh

body
	padding 0
	margin 0
	min-height 100vh

h1,h2,h3,h4,ul
	margin 0
	padding 0

li
	list-style none

a
	text-decoration none

.pages-section
	box-sizing border-box
	&_cropped
		max-width $pageContentMaxWidth

.page-content
	max-width $pageContentMaxWidth
	margin 0 auto
